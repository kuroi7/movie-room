!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title MovieRoom
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %header.header
      .header__title
        = link_to root_path, class: "header__title--text" do
          = image_tag 'logo.png'
          Movie Room
      .header__right
        - if user_signed_in?
          = link_to movies_search_path, class: "header__right--btn" do
            映画を探す
            = icon('fa', 'search')
          = link_to user_path(current_user), class: "header__right--btn" do
            = current_user.name
            = icon('fa', 'user-circle')
          = link_to destroy_user_session_path, method: :delete, class: "header__right--btn" do
            ログアウト
            = icon('fa', 'sign-out-alt')
        - else
          -# - if devise_mapping.registerable? && controller_name != 'registrations'
          = link_to "ユーザー登録", new_registration_path(resource_name), class: 'header__right--btn'
          = link_to new_user_session_path, class: "header__right--btn" do
            ログイン
            = icon('fa', 'sign-in-alt')


    - if request.path == new_user_session_path 
      = render 'layouts/notifications'
      = yield
      = render 'layouts/footer'
    - elsif request.path == '/' 
      = render 'layouts/notifications'
      = render 'layouts/header_contents'
      = yield
      = render 'layouts/footer'
    - else
      .contents
        = render 'layouts/notifications'
        = yield
        = render 'layouts/footer'
