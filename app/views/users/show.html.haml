  .my_content
    %p
      %img
    .my_content__profile{ id: "profile" }
      %header
        %h2
          profile
          %span
      %img(src="#{current_user.profile_img}" alt="profile_image")
      %p #{current_user.name}
      .my_content__profile--introduction
        = current_user.introduction
      = link_to edit_user_path(current_user) do
        = icon('fas', 'cog', class: 'icon')
    .my_content__movie_ranking{ id: "movie_ranking" }
      %header
        %h2
          my_movie_ranking
        .ranking_area
          %ul
            %li
              .rank
                １位：華麗なるギャツビー
            %li
              .rank
                ２位：殺人の追憶
            %li
              .rank
                ３位：ジュラシックパーク
            %li
              .rank
                ４位：ピーターラビット
            %li
              .rank
                ５位：ロード・オブ・ザ・リング
    .my_content__review{ id: "review" }
      %header
        %h2
          review
        %h2
          .new_btm
            = link_to new_post_path, class: "header__right--btn" do
              新規投稿
      %ul
        - @posts.each do |post|
          %li
            .li_content
              %img(src="https://images.unsplash.com/photo-1478720568477-152d9b164e26?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80" alt="movie review")
              %p
                = link_to  post_path(post.id), class: "content__right__top--title" do
                  = post.title

    .my_content__message{ id: "message" }
      %header
        %h2
        = link_to messages_path do
          message
        %ul
          - current_user.groups.each do |group|
            %li
              .li_content
                %img(src="https://images.unsplash.com/photo-1478720568477-152d9b164e26?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80" alt="movie review")
                %p
                  = link_to group_messages_path(group) do
                    = group.name
                  %br
                  = group.show_last_message

