#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Edit Account
      %h5 アカウントの編集
      %br
      = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'
      = link_to "マイページに戻る", :back, class: 'btn'
    .account-page__inner--right.user-form
      %img(src="#{current_user.profile_img}" alt="profile_image")
      = form_for(current_user) do |f|
        .field
          .field-label
            = f.label :name
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email
        .field
          .field-label
            = f.label :introduction
          .field-input
            = f.text_area :introduction ,class: "text-area-size"
        .field
          .field-label
            = f.label :profile_img
          .field-input
            = f.file_field :profile_img
        .actions
          = f.submit "Update", class: 'btn'